{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Python: Lint",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "check", "."],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
